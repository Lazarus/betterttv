{
	"manifest_version": 2,

	"name": "BetterTTV for xat",
	"description": "Sample extension for the “Making your first extension” article",
	"version": "1.0",
	
	
	"content_scripts":[
		{
			"matches": ["https://xat.com/content/web/R00048/box/www/classic.html"],
			"all_frames": true,
			"js": ["build/betterttv.js"],
			"css": ["build/betterttv.css"]
		}
	],

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"permissions": ["activeTab", "tabs", "https://xat.com/","https://xat.com/content/web/R00048/box/www/classic.html"]
}